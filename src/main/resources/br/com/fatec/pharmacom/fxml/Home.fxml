<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<VBox 
	spacing="20.0" 
	xmlns="http://javafx.com/javafx/8.0.171" 
	xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="br.com.fatec.pharmacom.PrimaryController"
	>
   <children>
  	  <HBox 
		fx:id="headerContainer"
		alignment="CENTER"
		maxWidth="Infinity"
		styleClass="header"
		>
          <Region HBox.hgrow="ALWAYS"/>
          <Button  
          		styleClass="btn-navigation"
          		text="Inventario" 
          		fx:id="btnProducts" 
          		onAction="#switchToInventory"/>
          <Region HBox.hgrow="ALWAYS"/>
		  <Button  
		  		styleClass="btn-navigation" 
		  		text="Produtos" 
		  		fx:id="btnProducts" 
		  		onAction="#switchToProductManagement"
	  	  	/>
		  <Region HBox.hgrow="ALWAYS"/>
		  <Button  
		  		styleClass="btn-navigation" 
		  		text="Fornecedores" 
		  		fx:id="btnSuppliers" 
		  		onAction="#switchToSuppliersManagement"
		  	/>
		  <Region HBox.hgrow="ALWAYS"/>
		  <Button  
		  		styleClass="btn-navigation" 
		  		text="Clientes" 
		  		fx:id="btnClients" 
		  		onAction="#switchToCustomersManagement"
		  	/>
		  <Region HBox.hgrow="ALWAYS"/>
		  <Button  
			  	styleClass="btn-navigation" 
			  	text="Relatorios" 
			  	fx:id="btnReports"  
		  	/>
		  <Region HBox.hgrow="ALWAYS"/>
		  <Button  
		  		styleClass="btn-navigation" 
		  		text="Configuracoes" 
		  		fx:id="btnConfig" 
		  	/>
		  <Region HBox.hgrow="ALWAYS"/>
	  </HBox>
	  <HBox alignment="CENTER">
	  		<Label  text="Pagina Home" style="-fx-text-fill: #000000;"/>
	  </HBox>
   </children>
<!--    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding> -->
</VBox>
